<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="BrushColorCircularView">
    <item name="android:layout_width">@dimen/option_color_image_diameter</item>
    <item name="android:layout_height">@dimen/option_color_image_diameter</item>
    <item name="android:layout_marginStart" tools:targetApi="17">@dimen/option_content_margin_top</item>
    <item name="android:layout_marginLeft">@dimen/option_content_margin_top</item>
    <!--<item name="border_width">@dimen/divider_weight</item>-->
    <item name="android:layout_gravity">center_vertical</item>
    <!--<item name="border_color">@color/divider</item>-->
  </style>

  <style name="BrushSizeCircularView" parent="BrushColorCircularView">
    <item name="android:layout_width">@dimen/option_size_image_diameter</item>
    <item name="android:layout_height">@dimen/option_size_image_diameter</item>
  </style>

  <style name="OptionText">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="OptionIcon">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>

</resources>
